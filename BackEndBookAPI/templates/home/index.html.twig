{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
</style>

<div >
    <div class="container">
    {% for book in books %}
        <div>
            <h2>{{ book.title }}</h2>
            <p>Price: {{ book.price }}</p>
            <p>Rating: {{ book.rating }}</p>
        {% if book.img %}
            <img src="{{ "https://books.toscrape.com" ~ book.img | replace({'..': ''}) }}" alt="{{ book.title }}" />
        {% endif %}
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
